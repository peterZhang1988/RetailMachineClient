<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="2500dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_good_detail">

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="14dp"
        android:src="@mipmap/close_detail"
        android:padding="18dp"
        android:layout_alignParentRight="true"
        />

    <ImageView
        android:id="@+id/image"
        android:layout_width="236dp"
        android:layout_height="236dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="108dp"
         />

    <RelativeLayout
        android:id="@+id/layout_add"
        android:layout_width="218dp"
        android:layout_height="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="74dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/bg_red_btn"
        android:textSize="16sp"
        android:layout_below="@id/image">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/buy_text"
            android:padding="8dp"
            android:src="@mipmap/bus_128" />

        <TextView
            android:id="@+id/buy_text"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"

            android:gravity="center"
            android:text="@string/add_text"
            android:textColor="@color/itemTextWhite"
            android:textSize="24sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:text="可口可乐"
        android:textColor="@color/itemTextBlack"
        android:textSize="24sp"
        android:layout_toRightOf="@id/image"
        android:layout_alignTop="@id/image" />

    <TextView
        android:id="@+id/price"
        android:layout_width="112dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="$3005"
        android:layout_alignLeft="@+id/name"
        android:textColor="@color/itemTextBlack"
        android:textSize="24sp"
        android:layout_below="@+id/name" />

    <TextView
        android:id="@+id/description"
        android:layout_width="754dp"
        android:layout_height="226dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="98dp"
        android:layout_alignLeft="@+id/name"
        android:text="可口可乐可以用来可口可乐可口可乐可口可乐可以用来可口可乐可口可乐"
        android:textColor="@color/itemTextBlack"
        android:textSize="20sp"
        android:layout_below="@+id/price" />
</RelativeLayout>