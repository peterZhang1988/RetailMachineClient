<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TestActivity"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="600dp"
        android:layout_height="match_parent"
        android:text="发送内容:"
        android:textSize="10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/tvPushUp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="上推"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btPullDown"
            android:layout_below="@id/tvPushUp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="下推"
            android:gravity="center"
            />

        <Button
            android:id="@+id/btcx"

            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="查询"
            android:gravity="center"
            android:layout_below="@id/btPullDown"
            />
        <Button
            android:id="@+id/btCPushGoods"

            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="撑杆推出货物"
            android:gravity="center"
            android:layout_below="@id/btcx"
            />

        <Button
            android:id="@+id/btCTake"

            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="出货"
            android:gravity="center"
            android:layout_below="@id/btCPushGoods"
            />

        <Button
            android:id="@+id/btCXLifter"

            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="查询升降机状态"
            android:gravity="center"
            android:layout_below="@id/btCTake"
            />
        <TextView
            android:id="@+id/tvTest"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="升降机到指定层数："
            android:layout_below="@id/btCXLifter"
            android:textSize="15dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/etNumber"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/tvTest"
            android:layout_below="@id/btCXLifter"
            />
        <Button
            android:id="@+id/btStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTest"
            android:layout_toRightOf="@id/tvTest"
            android:text="开始测试"
            />
        <Button
            android:id="@+id/btClear"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_below="@id/btStart"
            android:text="清除"
            />
    </RelativeLayout>






</LinearLayout>